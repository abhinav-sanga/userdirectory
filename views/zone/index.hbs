<div id="mainhd">
    <div id="wrapper" class="container clearfix">
        <h2 class="text-nowrap headd"><strong>User Directory</strong></h2>
        <button class="btn btn-default" type="button" id="addButton" data-toggle="modal" data-target="#userModal"><span class="glyphicon glyphicon-plus-sign"></span>Add new User</button>
    </div>
</div>
<div class="container">
    {{#if users }}
    <div class="table-responsive">
        <table #f class="table usertable" id="userTable">
            <thead>
            <tr id="tabhed">
                <th>USER NAME</th>
                <th>ADDRESS</th>
                <th>CONTACT</th>
                <th>EMAIL</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{# each users }}
            <tr>
                <td><span><img src="/images/default-user.png" alt="Avatar" style="width:23px; height: 23px; margin-right: 8px"></span>{{this.username}}</td>
                <td>{{this.address}}</td>
                <td>{{this.contact}}</td>
                <td>{{this.email}}</td>
                <td><div class="dropdown"><button class="dropdown-toggle deledit" data-toggle="dropdown"><span class="glyphicon glyphicon-option-horizontal"></span></button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li id="abc"><a class="open-editModal" href="#editModal" data-toggle="modal" data-ide="{{ this._id }}" data-eml="{{ this.email }}" data-usrn="{{ this.username}}" data-addr="{{ this.address }}" data-cntct="{{ this.contact }}"><span class="glyphicon glyphicon-edit"></span>Edit User Details</a></li>
                        <li><a href="/delete/{{ this._id }}"><span class="glyphicon glyphicon-trash"></span>Delete User</a></li>
                    </ul>
                </div>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    {{/if}}
</div>

<!-- Modal -->
<div class="modal fade" id="userModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <div id="modfstdiv" class="moddivs">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><strong>Add new User</strong></h4>
                </div>
                <form action="/" method="post">
                <div class="row moddivs" id="modscnddiv">
                    <div class="col-xs-6" id="profpic">
                        <img id="dp" src="/images/default-user.png" alt="Avatar" style="width:80%">
                        <button class="btn btn-primary" type="button" id="uploadbtn" style=" margin:3% -0.65%; padding: 2% 2%;">Upload</button>
                    </div>
                    <div class="col-xs-9" id="usad" style="padding-right: 0;">
                        <div class="form-group">
                            <label for="username">User Name</label>
                            <input class="form-control" name="username" id="username" type="text" placeholder="enter full name">
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input class="form-control" name="address" id="address" type="text" placeholder="enter address">
                        </div>
                    </div>
                </div>
                <div class="row moddivs" id="modthrddiv">
                    <div class="col-xs-6 form-group" style="padding-left: 0;">
                        <label for="contact">Contact</label>
                        <input class="form-control" name="contact" id="contact" type="text" placeholder="enter contact">
                    </div>
                    <div class="col-xs-6 form-group" style="padding-right: 0;">
                        <label for="email">User Email</label>
                        <input class="form-control" name="email" id="email" type="text" placeholder="enter email">
                    </div>
                </div>
                <div class="row moddivs">
                    <button type="submit" class="btn btn-default" id="subbtn">Add new User</button>
                </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <div id="modfstdiv" class="moddivs">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><strong>Edit User</strong></h4>
                </div>
                <form action="/edit" method="post">
                    <div class="row moddivs" id="modscnddiv">
                        <div class="col-xs-6" id="profpic">
                            <img id="dp" src="/images/default-user.png" alt="Avatar" style="width:80%">
                            <div class="row clearfix" id="ud">
                                <button class="btn btn-primary updel" type="button" id="uploadbtn" style="font-size: 10px; float: left">Upload</button>
                                <button class="btn btn-primary updel" type="button" style="border: 0.5px solid grey; background: transparent; float: right;"><span class="glyphicon glyphicon-trash"></span></button>
                            </div>
                        </div>
                        <div class="col-xs-9" id="usad" style="padding-right: 0;">
                            <div class="form-group">
                                <label for="username">User Name</label>
                                <input class="form-control" name="username1" id="username1" value="" type="text" placeholder="enter full name">
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input class="form-control" name="address1" id="address1" type="text" placeholder="enter address"  >
                            </div>
                        </div>
                    </div>
                    <div class="row moddivs" id="modthrddiv">
                        <div class="col-xs-6 form-group" style="padding-left: 0;">
                            <label for="contact">Contact</label>
                            <input class="form-control" name="contact1" id="contact1" type="text" placeholder="enter contact">
                        </div>
                        <div class="col-xs-6 form-group" style="padding-right: 0;">
                            <label for="emaail">User Email</label>
                            <input class="form-control" name="email1" id="email1" type="text" placeholder="enter email">
                        </div>
                    </div>
                    <div class="row moddivs">
                        <input type="hidden" id="id1" name="id1">
                        <button type="submit" class="btn btn-default" id="subbtn">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
